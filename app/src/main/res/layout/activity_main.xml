<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.tom.customfonts.MainActivity">
        <TextView
            android:id="@+id/text"
            style="@style/base_style"
            android:text="https://futurestud.io/ (Roboto)"
            />
        <com.example.tom.customfonts.CustomFontTextView
            style="@style/base_style"
            android:text="https://futurestud.io/ personal_use"
            app:font="@string/font_name_personal_use"/>
        <com.example.tom.customfonts.CustomFontButtonView
            style="@style/base_style"
            android:text="https://futurestud.io/ personal_use"
            app:font="@string/font_name_personal_use"/>
        <com.example.tom.customfonts.CustomFontTextView
            style="@style/base_style"
            android:text="https://futurestud.io/ (SSP)"
            app:font="@string/font_name_sans_pro"/>
        <com.example.tom.customfonts.CustomFontButtonView
            style="@style/base_style"
            android:text="https://futurestud.io/ (SSP)"

            app:font="@string/font_name_sans_pro"/>
        <com.example.tom.customfonts.CustomFontTextView
            style="@style/base_style"
            android:text="https://futurestud.io/ (SSP Bold)"

            android:textStyle="bold"
            app:font="@string/font_name_sans_pro"/>

        <com.example.tom.customfonts.CustomFontTextView
            style="@style/base_style"
            android:text="https://futurestud.io/ (SSP Italic)"

            android:textStyle="italic"
            app:font="@string/font_name_sans_pro"/>
        <com.example.tom.customfonts.CustomFontButtonView
            style="@style/base_style"
            android:text="https://futurestud.io/ (SSP Italic)"
            android:textStyle="italic"
            app:font="@string/font_name_sans_pro"/>
        <com.example.tom.customfonts.CustomFontTextView
            style="@style/base_style"
            android:text="https://futurestud.io/ (SSP Bold Italic)"
            android:textStyle="bold|italic"
            app:font="@string/font_name_sans_pro"/>
        <com.example.tom.customfonts.CustomFontButtonView
            style="@style/base_style"
            android:text="https://futurestud.io/ (SSP Bold Italic)"

            android:textStyle="bold|italic"
            app:font="@string/font_name_sans_pro"/>
        <!-- android:textStyle="bold|italic" is replaced by custom app:textStyle: -->
        <com.example.tom.customfonts.CustomFontTextView
            style="@style/base_style"
            android:text="https://futurestud.io/ (SSP Extra Light)"
            app:font="@string/font_name_sans_pro"
            app:textStyle="@integer/font_style_extra_light"/>
        <com.example.tom.customfonts.CustomFontButtonView
            style="@style/base_style"
            android:text="https://futurestud.io/ (SSP Extra Light)"
            app:font="@string/font_name_sans_pro"
            app:textStyle="@integer/font_style_extra_light"/>
        <!-- android:textStyle="bold|italic" is replaced by custom app:textStyle: -->
        <com.example.tom.customfonts.CustomFontTextView
            style="@style/base_style"
            android:text="https://futurestud.io/ (SSP Extra Bold)"
            app:font="@string/font_name_sans_pro"
            app:textStyle="@integer/font_style_extra_bold"/>
        <com.example.tom.customfonts.CustomFontButtonView
            style="@style/base_style"
            android:text="https://futurestud.io/ (SSP Extra Bold)"

            app:font="@string/font_name_sans_pro"
            app:textStyle="@integer/font_style_extra_bold"/>
        <com.example.tom.customfonts.CustomFontTextView
            style="@style/base_style"
            android:text="&#xf135;&#xf135;&#xf135;&#xf135;&#xf135;"
            app:font="@string/font_name_fontawesone"/>
        <com.example.tom.customfonts.CustomFontButtonView
            style="@style/base_style"
            android:text="&#xf135;&#xf135;&#xf135;&#xf135;&#xf135;"
            app:font="@string/font_name_fontawesone"/>
        <com.example.tom.customfonts.CustomFontTextView
            style="@style/base_style"
            android:text="Future Studio Blog"
            android:textStyle="bold"
            app:font="@string/font_name_sans_pro"/>
        <com.example.tom.customfonts.CustomFontButtonView
            style="@style/base_style"
            android:text="Future Studio Blog"
            android:textStyle="bold"
            app:font="@string/font_name_sans_pro"/>
        <com.example.tom.customfonts.CustomFontTextView
            android:text="&#xf135; Future Studio &#xf135;"
            app:font="@string/font_name_fontawesone"
            style="@style/base_style" />
        <com.example.tom.customfonts.CustomFontButtonView
            style="@style/base_style"
            android:text="&#xf135; Future Studio &#xf135;"

            app:font="@string/font_name_fontawesone"/>
    </LinearLayout>
</ScrollView>